[user]
	name = <Your Name>
	email = <Your email>

[alias]
  br = branch
  hist = log --graph --pretty=format:'%Cred%h%Creset - %Cgreen%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  type = cat-file -t
  dump = cat-file -p

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = yellow
  untracked = cyan
  deleted = red bold

[core]
	excludesfile = ~/.gitignore
  editor = nvim -f

[credential]
  helper = store

[push]
  default = simple

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
